<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.aplicacao.Controller"
      alignment="center"
      xmlns="http://javafx.com/javafx/8.0.121">

    <HBox VBox.vgrow="NEVER">
        <ComboBox fx:id="choiceBox"
                  promptText="Selecione o parÃ¢metro"
                  HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="10.0"
                        left="10.0"
                        right="10.0"
                        top="10.0"/>
            </HBox.margin>
        </ComboBox>

        <TextField fx:id="textField"
                   promptText="Digite aqui o texto da busca..."
                   HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="10.0"
                        left="10.0"
                        right="10.0"
                        top="10.0"/>
            </HBox.margin>
        </TextField>

        <Button fx:id="btSearch"
                mnemonicParsing="false"
                onAction="#buscaEntradas"
                text="Buscar"
                HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="10.0"
                        left="10.0"
                        right="10.0"
                        top="10.0"/>
            </HBox.margin>
        </Button>
    </HBox>

    <Label fx:id="labelResults"
           alignment="BASELINE_LEFT"
           text="0 resultados">
        <VBox.margin>
            <Insets bottom="5.0"/>
        </VBox.margin>
    </Label>

    <TableView fx:id="table"
               VBox.vgrow="ALWAYS">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <HBox VBox.vgrow="NEVER">
        <Label fx:id="labelLog" alignment="BASELINE_LEFT"/>
    </HBox>
</VBox>
